{
  "presets": [
    {
      "name": "My GraphQL Config",
      "type": "graphql",
      "url": "https://gontoz.escape.tech/",
      "query": "mutation($username: String!, $password: String!) { authentification(username: $username, password: $password) { token } }",
      "inject": {
        "location": "header",
        "key": "Authorization",
        "prefix": "Bearer "
      },
      "users": [
        {
          "username": "user",
          "variables": {
            "username": "john",
            "password": "P4ss"
          }
        }
      ]
    }
  ],
  "$schema": "../multiauth-schema.json"
}
